    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>Admin.ServiceBase</AssemblyName>
    <RootNamespace>Admin.ServiceBase</RootNamespace>
  </PropertyGroup>

  <!-- FastEndpoints -->
